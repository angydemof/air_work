<div class="container mt-3">

  <div class="search-form mb-4">
    <%= render '/shared/search' %>
  </div>

  <ul class="nav nav-tabs justify-content-end">
    <li class="nav-item">
      <a class="nav-link active" href="#offices" data-toggle="tab">Offices</a>
    </li>
    <li class="nav-item">
      <a class="nav-link" href="#map" data-toggle="tab">Map</a>
    </li>
  </ul>

  <div class="tab-content clearfix mt-3">
    <div class="tab-pane active" id="offices">
      <div id="offices">
        <%= render 'office', offices: @offices %>
      </div>
    </div>
    <div class="tab-pane" id="map"
          style="width: 100%;
          height: 600px;"
          data-markers="<%= @markers.to_json %>"
          data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
    </div>
  </div>
</div>

