    <%= b.input :price %>
    <div class="show-feature">
      <h3>Features</h3>
      <div class="row mt-3">
        <div class="col-4 mb-3">

          <input hidden=true type="checkbox" name="coffee_machine" id="coffee_machine">

          <label class="equipment-choice" for="coffee_machine"><i class="fas fa-mug-hot"></i><br>
            <p>Coffee/Tea</p>
          </label><br>
        </div>

        <div class="col-4 mb-3">
          <input hidden=true type="checkbox" name="smoking_area" id="smoking_area">

          <label class="equipment-choice" for="smoking_area"><i class="fas fa-smoking"></i><br>
            <p>Smoker friendly</p>
          </label><br>
        </div>

        <div class="col-4 mb-3">
          <input hidden=true type="checkbox" name="pets_allowed" id="pets_allowed">

          <label class="equipment-choice" for="pets_allowed"><i class="fas fa-paw"></i><br>
            <p>Pets allowed</p>
          </label><br>
        </div>

        <div class="col-4 mb-3">
          <input hidden=true type="checkbox" name="heater_ac" id="heater_ac">

          <label class="equipment-choice" for="heater_ac"><i class="fas fa-thermometer"></i><br>
            <p>Heater & A/C</p>
          </label><br>
        </div>

        <div class="col-4 mb-3">
          <input hidden=true type="checkbox" name="adaptors" id="adaptors">

          <label class="equipment-choice" for="adaptors"><i class="fas fa-plug"></i><br>
